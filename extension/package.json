{
  "name": "quickscript",
  "publisher": "trignomtry",
  "displayName": "QuickScript",
  "description": "The QuickScript Language Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "*",
    "onLanguage:quick",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "quick",
        "aliases": [
          "QuickScript",
          "quick"
        ],
        "extensions": [
          ".qx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "quick",
        "scopeName": "source.quick",
        "path": "./syntaxes/quick.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.qx": "quick"
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}